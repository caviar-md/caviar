int i
int j


echo "================"
echo "    LOOP TEST"
echo "================"

i=1
do i<5
  echo "i: " i   
  if i<3
    echo i " is smaller than 3"
  endif
  i = i+1
enddo 



echo "================"
echo "NESTED LOOP TEST"
echo "================"

int sum = 0

i=1
do i<5
  j=1
  do j<5
    sum = i+j
    if sum > 5
      echo "yes: " sum ">5"
    elseif i+j==5
      echo "middle :" sum "==5"
    else
      echo "no : " sum "< 5"
    endif
    echo "i,j: " i " " j  
    j  = j + 1
  enddo
  i = i+1
enddo


